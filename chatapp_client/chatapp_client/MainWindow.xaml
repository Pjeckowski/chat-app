<Window x:Class="chatapp_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                        
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Margin="5,5,5,5" x:Name="Connect_Button" Content="Connect" Click="Connect_Button_Click" />
                <Button Grid.Column="0" Margin = "5,5,5,5"  x:Name="Send_Button" Content="Send" Click="Send_Button_Click" />
            </Grid>
            
        </StackPanel>
        
    </Grid>
</Window>
